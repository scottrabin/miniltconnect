{
  "manifest_version": 2,
  "name": "LightTable Connect",
  "description": "Automatically connect to a LightTable instance via web sockets.",
  "version": "0.0.1",
  "permissions": [
    "*://*/*",
    "storage",
    "tabs",
    "activeTab"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_title": "LightTable Connect",
    "default_popup": "popup.html"
  }
}